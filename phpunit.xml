<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="vendor/autoload.php" backupGlobals="false" colors="true">
    <logging>
        <log type="coverage-clover" target="coverage/clover.xml"/>
    </logging>
    <php>
        <env name="SQLITE_DSN" value="sqlite::memory:"/>
        <env name="SQLITE_USERNAME" value=""/>
        <env name="SQLITE_PASSWORD" value=""/>

        <env name="MYSQL_DSN" value="mysql:host=db;dbname=test"/>
        <env name="MYSQL_USERNAME" value="root"/>
        <env name="MYSQL_PASSWORD" value="test"/>
    </php>
    <testsuites>
        <testsuite name="all">
            <directory>./tests/ElliotJReed/DatabaseAnonymiser/</directory>
        </testsuite>
        <testsuite name="sqlite">
            <directory>./tests/ElliotJReed/DatabaseAnonymiser/</directory>
            <exclude>./tests/ElliotJReed/DatabaseAnonymiser/MysqlDatabaseInformationTest.php</exclude>
            <exclude>./tests/ElliotJReed/DatabaseAnonymiser/MysqlDatabaseConfigurationTest.php</exclude>
        </testsuite>
        <testsuite name="mysql">
            <directory>./tests/ElliotJReed/DatabaseAnonymiser/</directory>
            <exclude>./tests/ElliotJReed/DatabaseAnonymiser/SqliteDatabaseInformationTest.php</exclude>
            <exclude>./tests/ElliotJReed/DatabaseAnonymiser/SqliteDatabaseConfigurationTest.php</exclude>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory>./src/</directory>
        </whitelist>
    </filter>
</phpunit>
